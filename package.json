{
  "name": "taskflow",
  "version": "1.0.0",
  "description": "A modern task management application with glass morphism UI, authentication, and role-based access control",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "nodemon backend/src/server.js",
    "test": "jest",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "create-admin": "cd backend && node scripts/create-admin.js"
  },
  "keywords": [
    "task-management",
    "full-stack",
    "react",
    "nodejs",
    "mongodb",
    "authentication",
    "jwt",
    "glass-morphism",
    "admin-panel",
    "role-based-access"
  ],
  "author": "TaskFlow Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/taskflow.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/taskflow/issues"
  },
  "homepage": "https://github.com/yourusername/taskflow#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
